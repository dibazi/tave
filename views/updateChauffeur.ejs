    <header class="bg-white shadow">
      <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Update Driver Details</h1>
      </div>
    </header>
    <main>

        <div>
            <div class="max-w-4xl mx-auto py-10 sm:px-6 lg:px-8">
                <div class="mt-5 md:mt-0 md:col-span-2">
                  <form method="post" action="/edit/chauffeur/<%= chauffeur.id %>">
                        <div class="shadow overflow-hidden sm:rounded-md">
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="name" class="block font-medium text-sm text-gray-700">Driver name</label>
                                <input type="text" name="name" id="name" value="<%= chauffeur.name %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>
    
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="surname" class="block font-medium text-sm text-gray-700">Driver surname</label>
                                <input type="text" name="surname" id="surname" value="<%= chauffeur.surname %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>
    
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="middle_name" class="block font-medium text-sm text-gray-700">Driver middle name</label>
                                <input type="text" name="middle_name" id="middle_name" value="<%= chauffeur.middle_name %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>
    
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="email" class="block font-medium text-sm text-gray-700">Driver email</label>
                                <input type="email" id="email" name="email" value="<%= chauffeur.email %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="address" class="block font-medium text-sm text-gray-700">Driver address</label>
                                <input type="text" name="address" id="address" value="<%= chauffeur.address %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                              <label for="address" class="block font-medium text-sm text-gray-700">Driver license n*</label>
                              <input type="text" name="driver_license" id="driver_license" value="<%= chauffeur.driver_license %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                          </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="cellphone" class="block font-medium text-sm text-gray-700">Driver cellphone</label>
                                <input type="tel" id="cellphone" name="cellphone" value="<%= chauffeur.cellphone %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="car_maker" class="block font-medium text-sm text-gray-700">Car maker</label>
                                <input type="text" id="car_maker" name="car_maker" value="<%= chauffeur.car_maker %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="car_model" class="block font-medium text-sm text-gray-700">Car model</label>
                                <input type="text" id="car_model" name="car_model" value="<%= chauffeur.car_model %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="car_color" class="block font-medium text-sm text-gray-700">Car color</label>
                                <input type="text" id="car_color" name="car_color" value="<%= chauffeur.car_color %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="name" class="block font-medium text-sm text-gray-700">car registration</label>
                                <input type="text" id="car_registration" name="car_registration" value="<%= chauffeur.car_registration %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="picture" class="block font-medium text-sm text-gray-700">Driver picture</label>
                                <input type="file" id="picture" name="picture" value="<%= chauffeur.picture %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
\                            </div>
    
                            <div class="flex items-center justify-end px-4 py-3 bg-gray-50 text-right sm:px-6">
                                <button class="inline-flex items-center px-4 py-2 bg-gray-800 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 active:bg-gray-900 focus:outline-none focus:border-gray-900 focus:shadow-outline-gray disabled:opacity-25 transition ease-in-out duration-150">
                                    Update
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </main>
  </div>

